<div class="login">
  <div class="login_box">
    <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
      <h3>Esqueci minha senha</h3>
      
      <p>
        <%= f.label :email %>
        <%= f.email_field :email %>
      </p>
      
      <p class="button">
        <%= f.submit "Enviar instruções por email" %>
      </p>
    
      <%= render "links" %>
    <% end %>
  </div>
</div>